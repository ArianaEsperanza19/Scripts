#!/bin/bash
# Script para automatizar inicio del servidor Apache y sus servicios.
if sudo /opt/lampp/lampp status | grep -q "Apache is running"; then
	echo "XAMPP ya est치 corriendo, deteniendolo..."
	echo "[d] Detener"
	echo "[r] Reiniciar"
	read -p "Opci칩n: " opcion
	case $opcion in
	d) sudo /opt/lampp/lampp stop ;;
	r) sudo /opt/lampp/lampp restart ;;
	*) echo "Opcion no valida!" ;;
	esac
else
	echo "XAMPP no est치 corriendo, inici치ndolo..."
	sudo /opt/lampp/lampp start
fi
